<!doctype html>
<html lang="en">

<head>
    <title>Personajes</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">

</head>

<body>
    <header>
        <!-- place navbar here -->
        <%- include('utilidades/nav') %>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="/personajes/<%=prev%>">Anterior</a></li>
                <li class="page-item"><a class="page-link" href="/personajes/<%=next%>">Siguiente</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section class="row justify-content-evenly">
            <!-- ========== for each por cada pj ========== -->
            <% pjs.forEach ( (pj)=> { %>
                <div class="card col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-3 mt-3 m-3">
                    <img src="<%= pj.image %>" class="card-img-top">
                    <div class="card-body">
                        <!-- if para status-->
                    <% if (pj.status=="Dead" ) {%>
                        <h4 class="card-title"><%= pj.name %></h4>
                        <p></i><b>Estado:</b> <%= pj.status %> <i class="bi bi-circle-fill text-danger"></i></p>
                    <% } else if (pj.status=="Alive" ) {%>
                        <h4 class="card-title"><%= pj.name %></h4>
                        <p><b>Estado:</b> <%= pj.status %> <i class="bi bi-circle-fill text-success"></i></p>
                    <% } else {%>
                        <h4 class="card-title"><%= pj.name %></h4>
                        <p><b>Estado:</b> <%= pj.status %> <i class="bi bi-circle-fill text-warning"></i></p>
                    <% } %>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><b>Especie:</b> <%=pj.species%></li>
                        <li class="list-group-item"><b>Tipo:</b> <%=pj.type%></li>
                        <li class="list-group-item"><b>Género:</b> <%=pj.gender%></li>
                        <li class="list-group-item"><b>Origen:</b> <%=pj.origin.name%></li>
                        <li class="list-group-item"><b>Última vez visto en:</b> <%=pj.location.name%></li>
                    </ul>
                    <div class="card-body text-center">
                        <a href="<%= pj.url %>" class="card-link" target="_blank">Ver personaje</a>
                    </div>
                </div>
            <% }) %>
                    <!-- ========== End Section ========== -->
        </section>

    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
        </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/bootstrap-icons.svg"></script>
</body>

</html>